<Window x:Class="FileMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMonitor" 
        xmlns:c="clr-namespace:FileMonitor.Models"
        mc:Ignorable="d"
        Title="FileMonitor" Height="450" Width="500">

    <!-- Main Program Grid -->
    <Grid>
        <TabControl>
            <TabItem Header="Main">
                <ScrollViewer>
                    <Grid Background="#FFE5E5E5">
                        <Label Content="Recently changed files:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBlock x:Name="RecentlyChangedFiles" Text="" HorizontalAlignment="Center" Height="355" Margin="0,41,0,0" TextWrapping="Wrap" 
                                   VerticalAlignment="Top" Width="474"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="File Paths">
                <ScrollViewer>
                    <Grid Background="#FFE5E5E5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="20" Margin="0,10,0,0" Grid.ColumnSpan="2">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Margin" Value="10,0,2,0"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button x:Name="AddNewFile" Content=" New " Click="AddNewFile_Click"/>
                            <Button x:Name="DeleteFiles" Content=" Delete " Click="DeleteFiles_Click"/>
                        </StackPanel>
                        <Label Content="All Files:" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
                        <CheckBox x:Name="FilesDisplayed" Content="{Binding Path=AllFilePaths}" HorizontalAlignment="Left" 
                                  Margin="10,74,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    </Grid>
                </ScrollViewer>

            </TabItem>
            <TabItem Header="Settings">
                <ScrollViewer>
                    <Grid Background="#FFE5E5E5">
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
