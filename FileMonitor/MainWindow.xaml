<Window x:Class="FileMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMonitor" 
        xmlns:c="clr-namespace:FileMonitor.Models"
        mc:Ignorable="d"
        Title="FileMonitor" Height="768" Width="1024">

    <!-- Main Program Grid -->
    <Grid>
        <TabControl>

            <TabItem Header="Main" Margin="1,-1,-2,1">
                <ScrollViewer>
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,0,0" Grid.Column="0" >
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type FrameworkElement}">
                                    <Setter Property="Margin" Value="0,15,0,0"/>
                                </Style>
                                <Style TargetType="{x:Type StackPanel}" BasedOn="{StaticResource {x:Type FrameworkElement}}"/>
                                <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource {x:Type FrameworkElement}}"/>
                                <Style TargetType="{x:Type Border}" BasedOn="{StaticResource {x:Type FrameworkElement}}"/>
                            </StackPanel.Resources>
                            <StackPanel Orientation="Horizontal" Height="20" Grid.Column="0">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </StackPanel.Resources>
                                <Button x:Name="AddNewFile" Content=" Add File " Click="AddNewFile_Click"/>
                                <Button x:Name="AddNewFolder" Content=" Add Folder " Click="AddNewFolder_Click"/>
                                <Button x:Name="DeleteFiles" Content=" Delete File " Click="DeleteFiles_Click" IsEnabled="False"/>
                                <Button x:Name="PerformBackup" Content=" Copy All " Click="PerformBackup_Click" />
                            </StackPanel>
                            <Border BorderBrush="Black" BorderThickness=".5" Background="White" Padding="3" Width="227" HorizontalAlignment="Left">
                                <TextBlock Text="Shows all files monitored by the program:" />
                            </Border>
                            <ListView x:Name="FilesDisplayed"  ItemsSource="{Binding AllFilePaths}" SelectionChanged="FilesDisplayed_SelectionChanged" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,0,0" Grid.Column="1">
                            <Border BorderBrush="Black" BorderThickness=".5" Background="White" Padding="4" Width="286" HorizontalAlignment="Left">
                                <TextBlock Text="Shows files that have changed since the last backup:" />
                            </Border>
                            <ListView x:Name="RecentlyChangedFiles" ItemsSource="{Binding Path=RecentlyChangedFiles}" SelectionChanged="FilesDisplayed_SelectionChanged">
                            </ListView>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Settings">
                <ScrollViewer>
                    <Grid Background="#FFE5E5E5">
                    </Grid>
                </ScrollViewer>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
